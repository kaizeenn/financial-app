<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Catatan Keuangan</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Tailwind CSS built output -->
  <link href="/stylesheets/tailwind.css" rel="stylesheet">
  <link href="/stylesheets/template-theme.css" rel="stylesheet">
  <!-- Responsive CSS untuk mobile/tablet -->
  <link href="/stylesheets/responsive.css" rel="stylesheet">
  <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body>
  <!-- Tailwind-based layout: sidebar + main content -->
  <div class="min-h-screen flex items-start gap-6 bg-gray-50">
    <%- include('../partials/user_navbar', { username: typeof username !== 'undefined' ? username : '', active: typeof active !== 'undefined' ? active : '' }) %>

    <!-- Main Content -->
    <main class="flex-1 min-h-screen md:ml-64">
      <div class="w-full p-6">
        <%- body %>
      </div>
    </main>
  </div>

  <%- typeof script !== 'undefined' ? script : '' %>
</body>
</html>
