<!-- Partial account_card.ejs -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 h-full flex flex-col justify-between hover:shadow-md transition-shadow duration-300">
  <div>
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-gray-900"><%= account.name %></h3>
        <p class="text-xs text-gray-500 mt-1">Akun Bank/Dompet</p>
      </div>
      <button class="text-gray-400 hover:text-red-600 transition-colors duration-200 p-1" onclick="deleteAccount('<%= account.id %>')" title="Hapus Akun">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>

    <div class="bg-gradient-to-r from-indigo-50 to-blue-50 rounded-lg p-4 mb-4">
      <p class="text-xs font-medium text-gray-600 uppercase tracking-wide">Saldo Akun</p>
      <div class="text-2xl font-bold text-gray-900 mt-1">Rp <%= new Intl.NumberFormat('id-ID').format(account.balance) %></div>
    </div>
  </div>

  <div class="pt-4 border-t border-gray-100">
    <div class="flex items-center gap-2 text-xs text-gray-500">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd" />
      </svg>
      <span>Dibuat <%= new Date(account.created_at).toLocaleDateString('id-ID', { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
    </div>
  </div>
</div>
