<!-- Page Header -->
<div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg shadow-sm border border-indigo-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <h6 class="text-sm font-medium text-indigo-700">Total User</h6>
                <div class="text-2xl font-bold text-indigo-800 mt-1"><%= totalUsers %></div>
            </div>
            <div class="w-10 h-10 bg-indigo-200 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-indigo-700" viewBox="0 0 20 20" fill="currentColor"><path d="M13 7a3 3 0 11-6 0 3 3 0 016 0z"/><path fill-rule="evenodd" d="M4 13s1-1 6-1 6 1 6 1-1 4-6 4-6-4-6-4z" clip-rule="evenodd"/></svg>
            </div>
        </div>
    </div>

    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg shadow-sm border border-green-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <h6 class="text-sm font-medium text-green-700">Total Kategori</h6>
                <div class="text-2xl font-bold text-green-800 mt-1"><%= totalCategories %></div>
            </div>
            <div class="w-10 h-10 bg-green-200 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-700" viewBox="0 0 20 20" fill="currentColor"><path d="M3 3h14v4H3z"/><path d="M3 9h14v8H3z"/></svg>
            </div>
        </div>
    </div>

    <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-lg shadow-sm border border-yellow-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <h6 class="text-sm font-medium text-yellow-700">Metode Pembayaran</h6>
                <div class="text-2xl font-bold text-yellow-800 mt-1"><%= totalPaymentMethods %></div>
            </div>
            <div class="w-10 h-10 bg-yellow-200 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-yellow-700" viewBox="0 0 20 20" fill="currentColor"><path d="M4 4h12a2 2 0 012 2v2H2V6a2 2 0 012-2z"/><path d="M2 9h16v5a2 2 0 01-2 2H4a2 2 0 01-2-2V9z"/></svg>
            </div>
        </div>
    </div>

    <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-lg shadow-sm border border-teal-200 p-6 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <h6 class="text-sm font-medium text-teal-700">Aktivitas</h6>
                <div class="text-2xl font-bold text-teal-800 mt-1"><%= recentUsers.length %></div>
            </div>
            <div class="w-10 h-10 bg-teal-200 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-teal-700" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3 3a1 1 0 011-1h3a1 1 0 011 1v3H8a1 1 0 100 2h1v3a1 1 0 102 0V8h1a1 1 0 100-2h-.999V3a1 1 0 011-1H16a1 1 0 011 1v3h1a1 1 0 110 2h-1v9a1 1 0 01-1 1h-4.5a.5.5 0 010-1H15V8h-2v3a1 1 0 11-2 0V8H9v10H4a1 1 0 01-1-1V8H2a1 1 0 110-2h1V3z" clip-rule="evenodd"/></svg>
            </div>
        </div>
    </div>
</div>

<!-- Recent Users Table -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="text-lg font-semibold text-gray-900">User Terbaru</h5>
        <p class="text-sm text-gray-500">Daftar pendaftar terbaru</p>
    </div>
    <div class="p-6">
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead>
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider bg-gray-50">Username</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider bg-gray-50">Email</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider bg-gray-50">Level</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider bg-gray-50">Tanggal Daftar</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    <% recentUsers.forEach(user => { %>
                    <tr class="border-b border-gray-100 hover:bg-gray-50">
                        <td class="px-4 py-4 text-sm text-gray-900"><%= user.username %></td>
                        <td class="px-4 py-4 text-sm text-gray-900"><%= user.email %></td>
                        <td class="px-4 py-4">
                            <% if (user.level === 1) { %>
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-700">Admin</span>
                            <% } else { %>
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">User</span>
                            <% } %>
                        </td>
                        <td class="px-4 py-4 text-sm text-gray-900"><%= new Date(user.created_at).toLocaleDateString('id-ID') %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
