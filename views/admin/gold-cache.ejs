<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Gold Price Cache</h1>
  <div class="bg-white rounded shadow p-4">
    <% if (cache) { %>
      <p><strong>USD per ozt:</strong> <%= Number(cache.price_usd).toLocaleString('en-US', { maximumFractionDigits: 2 }) %></p>
      <p><strong>IDR per ozt:</strong> Rp <%= Number(cache.price_idr).toLocaleString('id-ID') %></p>
      <p><strong>Rate (XAU raw):</strong> <%= cache.rate %></p>
      <p><strong>Updated at:</strong> <%= cache.updated_at %></p>
    <% } else { %>
      <p>Belum ada cache.</p>
    <% } %>
  </div>
  <form action="/admin/gold-cache/refresh" method="POST" class="mt-4">
    <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">Refresh Sekarang</button>
  </form>
</div>
