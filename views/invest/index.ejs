<!-- Page Header -->
<div class="flex items-center justify-between mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Portofolio Investasi</h1>
  <a href="/invest/add" class="inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2.5 rounded-lg font-medium shadow-sm transition-colors duration-200">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    Tambah Aset
  </a>
</div>

<!-- Total Investment Card -->
  <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg shadow-sm border border-indigo-200 p-6 mb-8 hover:shadow-md transition-shadow duration-300">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-indigo-700">Total Nilai Investasi</h3>
      <div class="w-10 h-10 bg-indigo-200 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
    <div class="text-2xl font-bold text-indigo-700">Rp <%= total.toLocaleString('id-ID') %></div>
    <p class="text-xs text-indigo-600 mt-2">Total nilai aset crypto dan emas</p>
  </div>

  <!-- Portfolio Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Daftar Aset Investasi</h2>
    
    <% if (portfolio.length === 0) { %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">Belum ada aset investasi</h3>
        <p class="text-gray-500 mb-6">Mulai investasi Anda dengan menambahkan aset crypto atau emas</p>
        <a href="/invest/add" class="inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2.5 rounded-lg font-medium shadow-sm transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Tambah Aset Pertama
        </a>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        <% portfolio.forEach(item => { %>
          <% const price = prices[item.id] || {idr:0,usd:0}; %>
          <% const itemTotal = (item.amount * (price.idr || 0)) || 0; %>
          
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-300">
            <!-- Header -->
            <div class="px-6 py-4 border-b border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <span class="inline-block px-2.5 py-1 text-xs font-semibold rounded <%= item.asset_type === 'CRYPTO' ? 'bg-orange-100 text-orange-700' : 'bg-yellow-100 text-yellow-700' %>">
                    <%= item.asset_type %>
                  </span>
                  <h3 class="text-lg font-semibold text-gray-900 mt-2"><%= item.name %></h3>
                </div>
              </div>
            </div>

            <!-- Body -->
            <div class="px-6 py-4 space-y-4">
              <!-- Jumlah -->
              <div>
                <p class="text-xs text-gray-500 font-medium mb-1">Jumlah Kepemilikan</p>
                <p class="text-xl font-bold text-gray-900"><%= item.amount.toLocaleString('id-ID') %></p>
              </div>

              <!-- Harga Realtime -->
              <div class="pb-4 border-b border-gray-200">
                <p class="text-xs text-gray-500 font-medium mb-1">Harga Realtime</p>
                <% if (price.idr > 0) { %>
                  <p class="text-base font-semibold text-gray-900">Rp <%= price.idr.toLocaleString('id-ID') %></p>
                  <p class="text-xs text-gray-500">$ <%= price.usd.toLocaleString('en-US') %></p>
                <% } else { %>
                  <p class="text-sm text-amber-700 font-medium">Harga tidak tersedia</p>
                  <% if (price.error) { %>
                    <p class="text-xs text-gray-500 mt-1"><%= price.error %></p>
                  <% } %>
                <% } %>
              </div>

              <!-- Nilai Total -->
              <div>
                <p class="text-xs text-gray-500 font-medium mb-1">Nilai Total</p>
                <p class="text-xl font-bold text-indigo-600">Rp <%= itemTotal.toLocaleString('id-ID') %></p>
              </div>
            </div>

            <!-- Actions -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex gap-2">
              <a href="/invest/edit/<%= item.id %>" class="flex-1 text-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium text-sm transition-colors duration-200">
                Edit
              </a>
              <form action="/invest/delete/<%= item.id %>" method="POST" class="flex-1" onsubmit="return confirm('Yakin hapus aset <%= item.name %>?')">
                <button type="submit" class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium text-sm transition-colors duration-200">
                  Hapus
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
