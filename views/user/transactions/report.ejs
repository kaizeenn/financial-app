<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">Laporan Transaksi</h1>
  <div class="flex gap-2">
    <a href="/transactions/report.xlsx?<%= new URLSearchParams({ start_date, end_date, type }).toString() %>" class="px-3 py-2 bg-green-600 text-white rounded">Export Excel</a>
    <a href="/transactions/report.pdf?<%= new URLSearchParams({ start_date, end_date, type }).toString() %>" class="px-3 py-2 bg-red-600 text-white rounded">Export PDF</a>
  </div>
</div>

<form method="GET" action="/transactions/report" class="grid grid-cols-1 md:grid-cols-4 gap-4 bg-white p-4 rounded border mb-6">
  <div>
    <label class="block text-sm font-medium mb-1">Tanggal Mulai</label>
    <input type="date" name="start_date" value="<%= start_date || '' %>" class="w-full border rounded px-3 py-2">
  </div>
  <div>
    <label class="block text-sm font-medium mb-1">Tanggal Akhir</label>
    <input type="date" name="end_date" value="<%= end_date || '' %>" class="w-full border rounded px-3 py-2">
  </div>
  <div>
    <label class="block text-sm font-medium mb-1">Tipe</label>
    <select name="type" class="w-full border rounded px-3 py-2">
      <option value="all" <%= type==='all'?'selected':'' %>>Semua</option>
      <option value="income" <%= type==='income'?'selected':'' %>>Pemasukan</option>
      <option value="expense" <%= type==='expense'?'selected':'' %>>Pengeluaran</option>
    </select>
  </div>
  <div class="flex items-end">
    <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded w-full">Terapkan Filter</button>
  </div>
</form>

<div class="bg-white rounded border">
  <table class="min-w-full">
    <thead>
      <tr>
        <th class="px-4 py-2 text-left">Jenis</th>
        <th class="px-4 py-2 text-left">Tanggal</th>
        <th class="px-4 py-2 text-left">Deskripsi</th>
        <th class="px-4 py-2 text-right">Jumlah</th>
        <th class="px-4 py-2 text-left">Akun</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(r => { %>
        <tr class="border-t">
          <td class="px-4 py-2 text-sm"><%= r.type === 'income' ? 'Pemasukan' : 'Pengeluaran' %></td>
          <td class="px-4 py-2 text-sm"><%= new Date(r.entry_date || r.tanggal).toLocaleDateString('id-ID') %></td>
          <td class="px-4 py-2 text-sm"><%= r.description || r.deskripsi || '-' %></td>
          <td class="px-4 py-2 text-sm text-right">Rp <%= new Intl.NumberFormat('id-ID').format(r.amount || r.jumlah) %></td>
          <td class="px-4 py-2 text-sm"><%= r.account_name || r.akun || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
