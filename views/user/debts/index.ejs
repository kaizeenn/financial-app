<!-- Page Header -->
<div class="flex items-center justify-between mb-6">
  <div>
    <h2 class="text-3xl font-bold mb-0">Utang & Piutang</h2>
    <small class="text-gray-500">Kelola utang dan piutang Anda</small>
  </div>
  <button id="openAddDebt" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
    <i class="bi bi-plus-lg"></i>
    <span class="hidden sm:inline">Tambah Utang/Piutang</span>
  </button>
</div>

<% if (error && typeof error === 'string' && error.trim()) { %>
  <div class="mb-4 px-4 py-3 rounded-lg bg-red-50 text-red-700 border border-red-200 flex items-start gap-3">
    <i class="bi bi-exclamation-triangle mt-0.5"></i>
    <div class="flex-1">
      <%= error %>
    </div>
  </div>
<% } %>

<% if (success && typeof success === 'string' && success.trim()) { %>
  <div class="mb-4 px-4 py-3 rounded-lg bg-green-50 text-green-700 border border-green-200 flex items-start gap-3">
    <i class="bi bi-check-circle mt-0.5"></i>
    <div class="flex-1">
      <%= success %>
    </div>
  </div>
<% } %>

<!-- Summary Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow-sm p-4">
    <h5 class="text-sm font-semibold text-red-600 mb-2">Total Utang</h5>
    <p class="text-2xl font-bold">Rp <%= new Intl.NumberFormat('id-ID').format(summary.total_debt) %></p>
  </div>
  <div class="bg-white rounded-lg shadow-sm p-4">
    <h5 class="text-sm font-semibold text-green-600 mb-2">Utang Dibayar</h5>
    <p class="text-2xl font-bold">Rp <%= new Intl.NumberFormat('id-ID').format(summary.total_paid_debt) %></p>
  </div>
  <div class="bg-white rounded-lg shadow-sm p-4">
    <h5 class="text-sm font-semibold text-yellow-600 mb-2">Sisa Utang</h5>
    <p class="text-2xl font-bold">Rp <%= new Intl.NumberFormat('id-ID').format(summary.total_remaining_debt) %></p>
  </div>
  <div class="bg-white rounded-lg shadow-sm p-4">
    <h5 class="text-sm font-semibold text-blue-600 mb-2">Total Piutang</h5>
    <p class="text-2xl font-bold">Rp <%= new Intl.NumberFormat('id-ID').format(summary.total_credit) %></p>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow-sm p-4 mb-6">
  <form method="GET" action="/user/debts" class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Tipe</label>
      <select class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm" name="type">
        <option value="all" <%= type === 'all' ? 'selected' : '' %>>Semua</option>
        <option value="debt" <%= type === 'debt' ? 'selected' : '' %>>Utang</option>
        <option value="credit" <%= type === 'credit' ? 'selected' : '' %>>Piutang</option>
      </select>
    </div>
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
      <select class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm" name="status">
        <option value="all" <%= status === 'all' ? 'selected' : '' %>>Semua</option>
        <option value="unpaid" <%= status === 'unpaid' ? 'selected' : '' %>>Belum Dibayar</option>
        <option value="paid" <%= status === 'paid' ? 'selected' : '' %>>Sudah Dibayar</option>
      </select>
    </div>
    <div class="flex gap-2">
      <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md text-sm font-semibold hover:bg-indigo-700">Filter</button>
      <a href="/user/debts" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md text-sm font-semibold hover:bg-gray-50">Reset</a>
    </div>
  </form>
</div>

<!-- Debts Table -->
<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Tipe</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Nama Kreditor/Debitor</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Jumlah</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Dibayar</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Sisa</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Jatuh Tempo</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Status</th>
          <th class="px-6 py-3 text-left font-semibold text-gray-700">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% debts.forEach(debt => { %>
          <tr class="border-b border-gray-200 hover:bg-gray-50">
            <td class="px-6 py-4">
              <span class="inline-block px-2 py-1 rounded text-xs font-semibold <%= debt.type === 'debt' ? 'bg-red-100 text-red-700' : 'bg-blue-100 text-blue-700' %>">
                <%= debt.type === 'debt' ? 'Utang' : 'Piutang' %>
              </span>
            </td>
            <td class="px-6 py-4"><%= debt.creditor_debtor_name %></td>
            <td class="px-6 py-4">Rp <%= new Intl.NumberFormat('id-ID').format(debt.amount) %></td>
            <td class="px-6 py-4">Rp <%= new Intl.NumberFormat('id-ID').format(debt.paid_amount) %></td>
            <td class="px-6 py-4">Rp <%= new Intl.NumberFormat('id-ID').format(debt.remaining_amount) %></td>
            <td class="px-6 py-4"><%= debt.due_date ? new Date(debt.due_date).toLocaleDateString('id-ID') : '-' %></td>
            <td class="px-6 py-4">
              <span class="inline-block px-2 py-1 rounded text-xs font-semibold <%= debt.status === 'paid' ? 'bg-green-100 text-green-700' : (debt.status === 'overdue' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700') %>">
                <%= debt.status === 'paid' ? 'Dibayar' : (debt.status === 'overdue' ? 'Terlambat' : 'Belum Dibayar') %>
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="flex gap-2">
                <% if (debt.status !== 'paid') { %>
                  <button class="payment-btn p-2 text-indigo-600 hover:bg-indigo-50 rounded" data-debt-id="<%= debt.id %>" title="Tambah Pembayaran">
                    <i class="bi bi-cash"></i>
                  </button>
                <% } %>
                <button class="history-btn p-2 text-blue-600 hover:bg-blue-50 rounded" data-debt-id="<%= debt.id %>" title="Riwayat Pembayaran">
                  <i class="bi bi-clock-history"></i>
                </button>
              </div>
            </td>
          </tr>
        <% }) %>
        <% if (debts.length === 0) { %>
          <tr>
            <td colspan="8" class="px-6 py-8 text-center text-gray-500">
              Belum ada data utang/piutang
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- Add Debt Modal -->
<div id="addDebtModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-30 p-4">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6">
    <div class="flex items-center justify-between mb-4">
      <h5 class="text-xl font-semibold">Tambah Utang/Piutang</h5>
      <button id="closeAddDebt" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
    </div>
    <form id="debtForm">
      <!-- Tipe -->
      <div class="mb-4">
        <label class="block text-sm font-semibold text-gray-700 mb-3">Tipe</label>
        <div class="flex gap-2">
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="radio" name="type" value="debt" checked class="w-4 h-4">
            <span class="text-sm">Utang</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="radio" name="type" value="credit" class="w-4 h-4">
            <span class="text-sm">Piutang</span>
          </label>
        </div>
      </div>

      <!-- Kategori -->
      <div class="mb-4">
        <label for="category" class="block text-sm font-semibold text-gray-700 mb-2">Kategori</label>
        <select class="w-full border border-gray-300 rounded-md px-3 py-2" id="category" name="category" required>
          <option value="">Pilih Kategori</option>
        </select>
      </div>

      <!-- Nama Kreditor/Debitor -->
      <div class="mb-4">
        <label for="creditor_debtor_name" class="block text-sm font-semibold text-gray-700 mb-2">Nama Kreditor/Debitor</label>
        <input type="text" class="w-full border border-gray-300 rounded-md px-3 py-2" id="creditor_debtor_name" name="creditor_debtor_name" required>
      </div>

      <!-- Jumlah -->
      <div class="mb-4">
        <label for="amount" class="block text-sm font-semibold text-gray-700 mb-2">Jumlah</label>
        <div class="flex gap-2">
          <span class="px-3 py-2 bg-gray-100 border border-gray-300 rounded-md">Rp</span>
          <input type="text" class="flex-1 border border-gray-300 rounded-md px-3 py-2" id="amount" name="amount" required>
        </div>
      </div>

      <!-- Jatuh Tempo -->
      <div class="mb-4">
        <label for="due_date" class="block text-sm font-semibold text-gray-700 mb-2">Jatuh Tempo (Opsional)</label>
        <input type="date" class="w-full border border-gray-300 rounded-md px-3 py-2" id="due_date" name="due_date">
      </div>

      <!-- Deskripsi -->
      <div class="mb-6">
        <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">Deskripsi (Opsional)</label>
        <textarea class="w-full border border-gray-300 rounded-md px-3 py-2" id="description" name="description" rows="3"></textarea>
      </div>

      <div class="flex gap-2 justify-end">
        <button type="button" id="cancelDebt" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50">Batal</button>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Simpan</button>
      </div>
    </form>
  </div>
</div>

<!-- Payment Modal -->
<div id="paymentModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-30 p-4">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6">
    <div class="flex items-center justify-between mb-4">
      <h5 class="text-xl font-semibold">Tambah Pembayaran</h5>
      <button id="closePaymentModal" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
    </div>
    <form id="paymentForm">
      <input type="hidden" id="paymentDebtId" name="debt_id">
      
      <!-- Jumlah Pembayaran -->
      <div class="mb-4">
        <label for="paymentAmount" class="block text-sm font-semibold text-gray-700 mb-2">Jumlah Pembayaran</label>
        <div class="flex gap-2">
          <span class="px-3 py-2 bg-gray-100 border border-gray-300 rounded-md">Rp</span>
          <input type="text" class="flex-1 border border-gray-300 rounded-md px-3 py-2" id="paymentAmount" name="amount" required>
        </div>
      </div>

      <!-- Tanggal Pembayaran -->
      <div class="mb-4">
        <label for="paymentDate" class="block text-sm font-semibold text-gray-700 mb-2">Tanggal Pembayaran</label>
        <input type="date" class="w-full border border-gray-300 rounded-md px-3 py-2" id="paymentDate" name="payment_date" required>
      </div>

      <!-- Akun -->
      <div class="mb-6">
        <label for="paymentAccount" class="block text-sm font-semibold text-gray-700 mb-2">Akun</label>
        <select class="w-full border border-gray-300 rounded-md px-3 py-2" id="paymentAccount" name="account_id">
          <option value="">Pilih Akun</option>
          <% accounts.forEach(account => { %>
            <option value="<%= account.id %>"><%= account.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="flex gap-2 justify-end">
        <button type="button" id="cancelPayment" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50">Batal</button>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Simpan Pembayaran</button>
      </div>
    </form>
  </div>
</div>

<!-- Payment History Modal -->
<div id="paymentHistoryModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-30 p-4">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-2xl p-6 max-h-[90vh] overflow-y-auto">
    <div class="flex items-center justify-between mb-4 sticky top-0 bg-white">
      <h5 class="text-xl font-semibold">Riwayat Pembayaran</h5>
      <button id="closePaymentHistoryModal" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
    </div>
    <div id="paymentHistoryContent">
      <!-- Payment history will be loaded here -->
    </div>
  </div>
</div>

<!-- Inline scripts (no layout contentFor) -->
<script>
  // Load categories based on type selection
  document.querySelectorAll('input[name="type"]').forEach(radio => {
    radio.addEventListener('change', function() {
      loadCategories(this.value);
    });
  });

  async function loadCategories(type) {
    try {
      const response = await fetch(`/user/debts/categories?type=${type}`);
      const categories = await response.json();

      const categorySelect = document.getElementById('category');
      categorySelect.innerHTML = '<option value="">Pilih Kategori</option>';

      categories.forEach(category => {
        const option = document.createElement('option');
        option.value = category.id;
        option.textContent = category.name;
        categorySelect.appendChild(option);
      });
    } catch (error) {
      console.error('Error loading categories:', error);
    }
  }

  // Format input jumlah ke format Indonesia
  const amountInput = document.getElementById('amount');
  const paymentAmountInput = document.getElementById('paymentAmount');

  amountInput.addEventListener('input', function(e) {
    let value = this.value.replace(/[^0-9]/g, '');
    if (value) {
      value = new Intl.NumberFormat('id-ID').format(value);
    }
    this.value = value;
  });

  paymentAmountInput.addEventListener('input', function(e) {
    let value = this.value.replace(/[^0-9]/g, '');
    if (value) {
      value = new Intl.NumberFormat('id-ID').format(value);
    }
    this.value = value;
  });

  // Handle form submit
  document.getElementById('debtForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    try {
      // Ambil nilai jumlah dan konversi ke angka tanpa format
      const rawAmount = amountInput.value.replace(/\./g, '');
      const formData = new FormData(this);
      formData.set('amount', rawAmount);

      const response = await fetch('/user/debts', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded'
        },
        body: new URLSearchParams(formData)
      });

      const data = await response.json();

      if (data.success) {
        window.location.reload();
      } else {
        alert(data.message || 'Terjadi kesalahan saat menyimpan data.');
      }
    } catch (error) {
      console.error('Submit error:', error);
      alert('Terjadi kesalahan saat menyimpan data.');
    }
  });

  // Event delegation for payment and history buttons
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('payment-btn') || e.target.closest('.payment-btn')) {
      e.preventDefault();
      const debtId = e.target.closest('.payment-btn').dataset.debtId;
      document.getElementById('paymentDebtId').value = debtId;
      document.getElementById('paymentDate').value = new Date().toISOString().split('T')[0];
      const paymentModal = document.getElementById('paymentModal');
      paymentModal.classList.remove('hidden');
      paymentModal.classList.add('flex');
    }

    if (e.target.classList.contains('history-btn') || e.target.closest('.history-btn')) {
      e.preventDefault();
      const debtId = e.target.closest('.history-btn').dataset.debtId;
      fetch(`/user/debts/${debtId}/payments`)
        .then(response => response.json())
        .then(payments => {
          const content = document.getElementById('paymentHistoryContent');
          if (payments.length === 0) {
            content.innerHTML = '<p class="text-center">Belum ada riwayat pembayaran</p>';
          } else {
            let html = '<table class="w-full text-sm"><thead><tr class="border-b border-gray-200"><th class="px-3 py-2 text-left">Tanggal</th><th class="px-3 py-2 text-left">Jumlah</th><th class="px-3 py-2 text-left">Akun</th></tr></thead><tbody>';
            payments.forEach(payment => {
              html += `<tr class="border-b border-gray-100">
                <td class="px-3 py-2">${new Date(payment.payment_date).toLocaleDateString('id-ID')}</td>
                <td class="px-3 py-2">Rp ${new Intl.NumberFormat('id-ID').format(payment.amount)}</td>
                <td class="px-3 py-2">${payment.account_name || '-'}</td>
              </tr>`;
            });
            html += '</tbody></table>';
            content.innerHTML = html;
          }
          const historyModal = document.getElementById('paymentHistoryModal');
          historyModal.classList.remove('hidden');
          historyModal.classList.add('flex');
        })
        .catch(error => {
          console.error('Error loading payment history:', error);
          alert('Gagal memuat riwayat pembayaran');
        });
    }
  });

  // Handle payment form submit
  document.getElementById('paymentForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    try {
      const rawAmount = paymentAmountInput.value.replace(/\./g, '');
      const formData = new FormData(this);
      formData.set('amount', rawAmount);

      const response = await fetch('/user/debts/payments', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded'
        },
        body: new URLSearchParams(formData)
      });

      const data = await response.json();

      if (data.success) {
        window.location.reload();
      } else {
        alert(data.message || 'Terjadi kesalahan saat menyimpan pembayaran.');
      }
    } catch (error) {
      console.error('Payment submit error:', error);
      alert('Terjadi kesalahan saat menyimpan pembayaran.');
    }
  });

  // Modal handlers for add debt
  const openBtn = document.getElementById('openAddDebt');
  const modal = document.getElementById('addDebtModal');
  const closeBtn = document.getElementById('closeAddDebt');
  const cancelBtn = document.getElementById('cancelDebt');
  
  if (openBtn && modal) {
    openBtn.addEventListener('click', () => {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    });
  }
  if (closeBtn) closeBtn.addEventListener('click', () => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  });
  if (cancelBtn) cancelBtn.addEventListener('click', () => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  });

  // Payment modal close handlers
  const paymentModal = document.getElementById('paymentModal');
  const closePaymentModal = document.getElementById('closePaymentModal');
  const cancelPaymentBtn = document.getElementById('cancelPayment');

  if (closePaymentModal) {
    closePaymentModal.addEventListener('click', () => {
      paymentModal.classList.add('hidden');
      paymentModal.classList.remove('flex');
    });
  }
  if (cancelPaymentBtn) {
    cancelPaymentBtn.addEventListener('click', (e) => {
      e.preventDefault();
      paymentModal.classList.add('hidden');
      paymentModal.classList.remove('flex');
    });
  }

  // Payment history modal close handler
  const paymentHistoryModal = document.getElementById('paymentHistoryModal');
  const closePaymentHistoryModal = document.getElementById('closePaymentHistoryModal');

  if (closePaymentHistoryModal) {
    closePaymentHistoryModal.addEventListener('click', () => {
      paymentHistoryModal.classList.add('hidden');
      paymentHistoryModal.classList.remove('flex');
    });
  }

  // Edit debt function
  function editDebt(debtId) {
    // Redirect to detail page for editing
    window.location.href = `/user/debts/${debtId}`;
  }

  // Delete debt function
  function deleteDebt(debtId) {
    if (confirm('Apakah Anda yakin ingin menghapus utang/piutang ini? Semua riwayat pembayaran juga akan dihapus.')) {
      fetch(`/user/debts/${debtId}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.reload();
        } else {
          alert(data.message || 'Gagal menghapus data.');
        }
      })
      .catch(error => {
        console.error('Delete error:', error);
        alert('Terjadi kesalahan saat menghapus data.');
      });
    }
  }
</script>
