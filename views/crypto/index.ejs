<!-- Crypto Assets Page -->
<div class="py-2">
  <div class="max-w-7xl mx-auto">
    
    <!-- Page Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Aset Crypto</h1>
      <a href="/crypto/add" class="inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2.5 rounded-lg font-medium shadow-sm transition-colors duration-200">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Tambah Aset
      </a>
    </div>

    <!-- Flash Messages -->
    <% if (messages && messages.error) { %>
      <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 text-red-800 border border-red-200 flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <span><%= messages.error %></span>
      </div>
    <% } %>
    <% if (messages && messages.success) { %> 
      <div class="mb-6 px-4 py-3 rounded-lg bg-green-50 text-green-800 border border-green-200 flex items-start gap-3">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span><%= messages.success %></span>
      </div>
    <% } %>

    <!-- Portfolio Summary Card -->
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg shadow-sm border border-indigo-200 p-6 hover:shadow-md transition-shadow duration-300 mb-8">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-indigo-700">Total Nilai Portofolio</h3>
        <div class="w-10 h-10 bg-indigo-200 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"/>
          </svg>
        </div>
      </div>
      <div class="text-2xl font-bold text-indigo-700">Rp <%= Number(totalValueIdr).toLocaleString('id-ID') %></div>
      <p class="text-xs text-indigo-600 mt-2"><%= assets.length %> Aset Aktif</p>
    </div>

    <!-- Assets Grid -->
    <% if (assets.length === 0) { %>
      <div class="bg-white rounded-lg shadow-sm p-12 text-center border border-gray-200">
        <div class="max-w-md mx-auto">
          <div class="bg-gray-100 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm1 5a1 1 0 10-2 0v1H8a1 1 0 100 2h1v4a1 1 0 102 0v-4h1a1 1 0 100-2h-1V7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Belum ada aset crypto</h3>
          <p class="text-gray-600 mb-6">Mulai investasi crypto Anda dengan menambahkan aset pertama</p>
          <a href="/crypto/add" class="inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg shadow-md transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Tambah Aset Sekarang
          </a>
        </div>
      </div>
    <% } else { %>
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Daftar Aset Crypto</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <% assets.forEach(function(a) { %>
            <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-200">
              <div class="p-6">
                <!-- Coin Header -->
                <div class="flex items-center gap-3 mb-4">
                  <div class="bg-indigo-100 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
                    <span class="text-indigo-600 font-bold text-lg"><%= a.symbol.substring(0, 2).toUpperCase() %></span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-gray-900 truncate"><%= a.name %></h3>
                    <p class="text-sm text-gray-500"><%= a.symbol.toUpperCase() %></p>
                  </div>
                </div>

                <!-- Amount -->
                <div class="mb-4">
                  <p class="text-xs text-gray-600 mb-1">Jumlah Kepemilikan</p>
                  <p class="text-lg font-bold text-gray-900"><%= Number(a.amount).toLocaleString('id-ID', {maximumFractionDigits: 8}) %></p>
                </div>

                <!-- Price & Value -->
                <div class="bg-gray-50 rounded-lg p-4 mb-4 space-y-2">
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-600">Harga</span>
                    <span class="font-semibold text-gray-900">Rp <%= Number(a.price_idr).toLocaleString('id-ID') %></span>
                  </div>
                  <div class="flex justify-between items-center pt-2 border-t border-gray-200">
                    <span class="text-sm text-gray-600">Nilai</span>
                    <span class="text-base font-bold text-indigo-600">Rp <%= Number(a.value_idr).toLocaleString('id-ID') %></span>
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-2">
                  <a href="/crypto/edit/<%= a.id %>" class="flex-1 text-center bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                    Edit
                  </a>
                  <form action="/crypto/delete/<%= a.id %>" method="POST" class="flex-1" onsubmit="return confirm('Yakin ingin menghapus aset <%= a.name %>?')">
                    <button type="submit" class="w-full bg-red-50 hover:bg-red-100 text-red-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                      Hapus
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

  </div>
</div>

  </div>
</div>
