<!-- Add Crypto Asset Page -->
<div class="py-2">
  <div class="max-w-3xl mx-auto">
    
    <!-- Page Header -->
    <div class="mb-8">
      <a href="/crypto" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 mb-4">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/></svg>
        Kembali ke Daftar Aset
      </a>
      <h1 class="text-3xl font-bold text-gray-900">Tambah Aset Crypto</h1>
      <p class="mt-2 text-sm text-gray-600">Tambahkan cryptocurrency baru ke portofolio Anda</p>
    </div>

    <!-- Flash Messages -->
    <% if (messages && messages.error) { %>
      <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>
          <p class="text-red-700 font-medium"><%= messages.error %></p>
        </div>
      </div>
    <% } %>
    <% if (messages && messages.success) { %>
      <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
          <p class="text-green-700 font-medium"><%= messages.success %></p>
        </div>
      </div>
    <% } %>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <form action="/crypto/add" method="POST">
        <div class="p-8 space-y-6">
          
          <!-- Crypto Selection -->
          <div>
            <label for="cryptoSelect" class="block text-sm font-semibold text-gray-700 mb-2">Pilih Cryptocurrency</label>
            <select name="crypto_id" id="cryptoSelect" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" required>
              <option value="">-- Pilih Crypto --</option>
              <% cryptoList.forEach(function(c){ %>
                <option value="<%= c.id %>" data-coingecko="<%= c.coingecko_id %>"><%= c.name %> (<%= c.symbol.toUpperCase() %>)</option>
              <% }) %>
            </select>
            <p class="mt-2 text-xs text-gray-500">Pilih cryptocurrency yang ingin Anda tambahkan</p>
          </div>

          <!-- Amount Input -->
          <div>
            <label for="amountInput" class="block text-sm font-semibold text-gray-700 mb-2">Jumlah Kepemilikan</label>
            <input type="number" step="any" name="amount" id="amountInput" placeholder="0.00" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" required />
            <p class="mt-2 text-xs text-gray-500">Masukkan jumlah coin yang Anda miliki</p>
          </div>

          <!-- Price Preview Card -->
          <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl p-6 border border-indigo-100">
            <h3 class="text-sm font-semibold text-gray-700 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 20 20"><path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/><path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/></svg>
              Perhitungan Real-time
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Harga Saat Ini (IDR)</span>
                <span id="priceIdr" class="text-base font-bold text-gray-900">-</span>
              </div>
              <div class="h-px bg-indigo-200"></div>
              <div class="flex justify-between items-center">
                <span class="text-sm font-semibold text-gray-700">Total Nilai (IDR)</span>
                <span id="valueIdr" class="text-xl font-bold text-indigo-600">-</span>
              </div>
            </div>
          </div>

        </div>

        <!-- Form Actions -->
        <div class="bg-gray-50 px-8 py-6 flex gap-3">
          <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-semibold shadow-md transition-all duration-200 hover:shadow-lg">
            Simpan Aset
          </button>
          <a href="/crypto" class="flex-1 bg-white hover:bg-gray-50 text-gray-700 px-6 py-3 rounded-lg font-semibold border border-gray-300 text-center transition-all">
            Batal
          </a>
        </div>
      </form>
    </div>

  </div>
</div>

<script>
  const cryptoSelect = document.getElementById('cryptoSelect');
  const amountInput = document.getElementById('amountInput');
  const priceIdrEl = document.getElementById('priceIdr');
  const valueIdrEl = document.getElementById('valueIdr');

  async function refreshPrice() {
    const opt = cryptoSelect.options[cryptoSelect.selectedIndex];
    const coinId = opt ? opt.getAttribute('data-coingecko') : null;
    if (!coinId) { priceIdrEl.textContent = '-'; valueIdrEl.textContent = '-'; return; }
    try {
      const res = await fetch(`/crypto/get-price?coin=${encodeURIComponent(coinId)}`);
      const data = await res.json();
      const priceIdr = Number(data.idr || 0);
      priceIdrEl.textContent = `Rp ${priceIdr.toLocaleString('id-ID')}`;
      const amt = Number(amountInput.value || 0);
      valueIdrEl.textContent = `Rp ${(priceIdr * amt).toLocaleString('id-ID')}`;
    } catch (e) {
      priceIdrEl.textContent = 'Gagal fetch harga';
      valueIdrEl.textContent = '-';
    }
  }

  cryptoSelect.addEventListener('change', refreshPrice);
  amountInput.addEventListener('input', refreshPrice);
</script>
